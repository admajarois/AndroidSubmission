<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fillViewport="true"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetailActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/favorite_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            app:srcCompat="@drawable/ic_favorite_outline"
            android:contentDescription="@string/favorite"
            android:layout_margin="16dp"/>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="?attr/colorPrimary"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_collapseMode="parallax">
                                <ImageView
                                    android:id="@+id/iv_photo"
                                    android:layout_width="128dp"
                                    android:layout_height="128dp"
                                    android:layout_marginTop="8dp"
                                    android:contentDescription="@string/image_profile"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:srcCompat="@tools:sample/avatars" />

                                <TextView
                                    android:id="@+id/tv_name"
                                    style="@style/TextContent.Large.white"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/iv_photo"
                                    tools:text="Johnny Jeru" />


                                <TextView
                                    android:id="@+id/tv_followers"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toStartOf="@+id/tv_repository"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                                    tools:text="-" />

                                <TextView
                                    android:id="@+id/tv_repository"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                                    tools:text="-" />

                                <TextView
                                    android:id="@+id/tv_following"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="8dp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/tv_repository"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_name"
                                    tools:text="-" />

                                <TextView
                                    android:id="@+id/tv_label_followers"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/followers"
                                    app:layout_constraintEnd_toStartOf="@+id/tv_label_repo"
                                    app:layout_constraintHorizontal_bias="0.636"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_followers" />

                                <TextView
                                    android:id="@+id/tv_label_following"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/following"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.35"
                                    app:layout_constraintStart_toEndOf="@+id/tv_label_repo"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_following" />

                                <TextView
                                    android:id="@+id/tv_label_repo"
                                    style="@style/TextContent.white"
                                    android:layout_marginTop="8dp"
                                    android:text="@string/repository"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.498"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/tv_repository" />

                                <ProgressBar
                                    android:id="@+id/pb_repo"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_repository"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_repository"
                                    app:layout_constraintStart_toStartOf="@+id/tv_repository"
                                    app:layout_constraintTop_toTopOf="@+id/tv_repository"
                                    tools:visibility="invisible" />

                                <ProgressBar
                                    android:id="@+id/pb_followers"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toTopOf="@+id/tv_label_followers"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_followers"
                                    app:layout_constraintStart_toStartOf="@+id/tv_followers"
                                    app:layout_constraintTop_toTopOf="@+id/tv_followers"
                                    app:layout_constraintVertical_bias="0.13999999"
                                    tools:visibility="invisible" />

                                <ProgressBar
                                    android:id="@+id/pb_following"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_following"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_following"
                                    app:layout_constraintStart_toStartOf="@+id/tv_following"
                                    app:layout_constraintTop_toTopOf="@+id/tv_following"
                                    tools:visibility="invisible" />

                                <ProgressBar
                                    android:id="@+id/pb_name"
                                    style="?android:attr/progressBarStyleHorizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                                    app:layout_constraintEnd_toEndOf="@+id/tv_name"
                                    app:layout_constraintStart_toStartOf="@+id/tv_name"
                                    app:layout_constraintTop_toTopOf="@+id/tv_name"
                                    tools:visibility="invisible" />

                                <ProgressBar
                                    android:id="@+id/pb_img"
                                    style="?android:attr/progressBarStyle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintBottom_toBottomOf="@+id/iv_photo"
                                    app:layout_constraintEnd_toEndOf="@+id/iv_photo"
                                    app:layout_constraintStart_toStartOf="@+id/iv_photo"
                                    app:layout_constraintTop_toTopOf="@+id/iv_photo"
                                    tools:visibility="invisible" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:contentDescription="@string/tabs"
                    android:background="?attr/colorPrimary"
                    app:tabTextColor="@color/light" />

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>